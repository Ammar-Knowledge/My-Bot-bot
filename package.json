{
	"name": "probot-commitlint",
	"version": "0.0.0-development",
	"description": "A GitHub App that runs commitlint for you",
	"author": "Ammar-Ahmed-Butt <ammar.butt@atlassiancommunity.com>",
	"license": "MIT",
	"repository": "https://github.com/z0al/commitlint-bot.git",
	"keywords": [
		"validate",
		"commit",
		"pr",
		"conventional",
		"git",
		"probot-app"
	],
	"main": "index.js",
	"scripts": {
		"now-start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) npm start",
		"start": "probot run ./index.js",
		"test": "jest",
		"prepare": "husky install"
	},
	"files": [
		"lib",
		"index.js",
		"README.md"
	],
	"dependencies": {
		"@commitlint/config-conventional": "^8.2.0",
		"@commitlint/core": "^17.3.0",
		"before-after-hook": "^3.0.2",
		"coverage": "^0.4.1",
		"lint": "^1.1.2",
		"probot": "^6.2.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"commitlint-config-jira": "^1.6.4",
		"commitlint-plugin-jira-rules": "^1.6.4",
		"husky": "^8.0.2",
		"jest": "^29.3.1",
		"smee-client": "^1.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3"
	},
	"engines": {
		"node": "8.x",
		"npm": "5.5.x"
	},
	"jest": {
		"testEnvironment": "node"
	}
}
